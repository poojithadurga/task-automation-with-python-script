import os
import shutil

def organize_images(source_folder, dest_folder):
    """Move image files (.jpg/.png) from source to destination."""
    if not os.path.exists(source_folder):
        print("⚠️ Source folder not found:", source_folder)
        return
    
    os.makedirs(dest_folder, exist_ok=True)
    moved_count = 0

    for filename in os.listdir(source_folder):
        if filename.lower().endswith((".jpg", ".png")):
            src_path = os.path.join(source_folder, filename)
            dst_path = os.path.join(dest_folder, filename)

            # Avoid overwriting duplicates
            if os.path.exists(dst_path):
                name, ext = os.path.splitext(filename)
                dst_path = os.path.join(dest_folder, f"{name}_copy{ext}")
            
            shutil.move(src_path, dst_path)
            moved_count += 1

    print(f"\n✅ Moved {moved_count} image(s) to '{dest_folder}'." if moved_count else "No images found.")

def main():
    print("=== Image Organizer ===")
    src = input("Enter the source folder path: ").strip()
    dst = input("Enter the destination folder path: ").strip()
    organize_images(src, dst)

if __name__ == "__main__":
    main()